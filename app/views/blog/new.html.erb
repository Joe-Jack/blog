<%= render :partial => 'navbar' %>

<div class="name">
<h3>
    <%= @nickname %>さんのブログ書き込み
</h3>
</div>

<%= form_for @vlog, :url => {:action => 'new'} do |f| %>
  
  <div class="field">
  <%= f.label :image, "写真" %><br>
  <%= f.file_field :image, placeholder: 'image.png', class: "well well-sm" %>
  </div>
  <div class="content">
  <%= f.label :text, "内容" %><br>
  <%= f.text_area :text, placeholder: 'コメント＊マークダウン形式', class:"well well-lg" %>
  </div>
  <div class="actions">
  <%= f.submit "送信する" %>
  </div>
<% end %>

</div>